<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="portal_my_request_information" name="Portal My project requests: project requests"
              inherit_id="portal.portal_my_home" priority="28"><!-- odoo11 -->
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside"><!-- odoo11 -->
            <!--   <li t-if="request_information_count" class="list-group-item">
                  <span class="badge" t-esc="request_information_count"/>
                  <a href="/my/request_informations">Requests for Information</a>
              </li>-->
            <t t-if="request_information_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Requests for Information</t>
                <t t-set="url" t-value="'/my/request_informations'"/>
                <t t-set="count" t-value="request_information_count"/>
            </t>
        </xpath>

    </template>

    <template id="display_request_informations" name="Display Project Requests">
        <t t-call="portal.portal_layout"><!-- odoo11 -->
            <h3 class="page-header">Your Request for Informations</h3>
            <table class="table table-hover o_my_status_table">
                <thead>
                    <tr class="active">
                        <th>RFI No.</th>
                        <th>RFI Subject</th>
                        <th>Date</th>
                        <th>Priority</th>
                        <th>Stage</th>
                    </tr>
                </thead>
                <t t-foreach="request_informations" t-as="request_information">
                    <tr>
                        <td>
                            <a t-attf-href="/my/request_information/#{request_information.id}?{{ keep_query() }}">
                                <span t-field="request_information.name"/>
                            </a>
                        </td>
                        <td>
                            <span t-field="request_information.subject"/>
                        </td>
                        <td>
                            <span t-field="request_information.request_date"/>
                        </td>
                        <td>
                            <span t-field="request_information.priority"/>
                        </td>
                        <td>
                            <span t-field="request_information.stage_type"/>
                        </td>
                    </tr>
                </t>
            </table>
        </t>
    </template>

    <template id="display_request_information" name="Display Request Infomation">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="oe_structure">
                        <div class="row">
                            <div class="col-sm-6">
                                <ol class="breadcrumb mt8">
                                    <li>
                                        <a href="/my/home">
                                            <i class="fa fa-home"/>
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="/my/request_informations?#{keep_query()}">My Requests</a>
                                    </li>
                                    <li>
                                        <span t-field="request_information.name"/>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4>
                                            <span t-field="request_information.name"/>
                                            -
                                            <span t-field="request_information.subject"/>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class='row'>
                                    <div class="col-md-6">
                                        <div class="mb8">
                                            <strong>Assigned to :</strong>
                                            <span t-field="request_information.user_id"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Support Team :</strong>
                                            <span t-field="request_information.team_id"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Project:</strong>
                                            <span t-field="request_information.project_id"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Job Order:</strong>
                                            <span t-field="request_information.task_id"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Job Cost Sheet:</strong>
                                            <span t-field="request_information.job_cost_id"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Create Date:</strong>
                                            <span t-field="request_information.request_date"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Is Closed?:</strong>
                                            <span t-field="request_information.is_close"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Close Date:</strong>
                                            <span t-field="request_information.close_date"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb8">
                                            <strong>Customer/Supplier:</strong>
                                            <span t-field="request_information.partner_id"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Email :</strong>
                                            <span t-field="request_information.email"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Phone :</strong>
                                            <span t-field="request_information.phone"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Analytic Account :</strong>
                                            <span t-field="request_information.analytic_account_id"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Job Cost Line:</strong>
                                            <span t-field="request_information.job_cost_line_id"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Team Leader :</strong>
                                            <span t-field="request_information.team_leader_id"/>
                                        </div>
                                        <div class="mb8">
                                            <strong>Priority:</strong>
                                            <span t-field="request_information.priority"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="container" t-if="request_information.description">
                                    <p t-field="request_information.description"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt32 ">
                            <div class="col-md-12">
                                <h4>
                                    <strong>Message and communication history</strong>
                                </h4>
                            </div>
                            <div class="col-md-10 col-md-offset-1 mt16">
                                <t t-call="project_request_for_information.message_thread_request_information">
                                    <t t-set="object" t-value="request_information"/>
                                    <t t-set="chatter_mode" t-value="'json'"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
